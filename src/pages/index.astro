---
import Image from "astro/components/Image.astro";
import Navigation from "../components/Navigation.astro";
import landingImg from '../images/landing/david-schultz-SrewPUfo2c0-unsplash.jpg'
const allPosts = await Astro.glob('../pages/posts/*.md');
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
);
---
<html lang="en" class="h-full">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Martin Note</title>
    </head>

    <body class="min-h-full bg-gray-50 text-gray-900 antialiased">

        <header class="w-full flex justify-center" style="background-color: #181818;">
            <div class="max-w-5xl">
                <Navigation/>
                <Image src={landingImg}  alt='A picture of 2 monitor one of them displaying a beautiful wallpaper while the other is just displaying spotify, also there is a laptop which is being use for programming'/>
             </div>
        </header>

        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        
            <main>
                <section class="bg-white shadow-md rounded-lg p-6 mb-8">
                    <h1 class="text-3xl font-bold text-gray-900 mb-4">My Astro Learning Blog</h1>
                    <p class="text-gray-600 mb-6">This is where I will post about my journey learning Astro.</p>
                </section>

                <section class="mb-8">
                    <div class="flex flex-col md:flex-row justify-between items-center mb-6">
                        <h3 class="text-2xl font-semibold text-gray-800 mb-4 md:mb-0">Recent Posts</h3>
                        <div class="flex space-x-2">
                            <input 
                                type="text" 
                                placeholder="Search Blog" 
                                class="border-2 border-gray-200 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                            >
                            <button class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
                                Filter
                            </button>
                        </div>
                    </div>
                    <ul class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        {sortedPosts.map((post) => (
                            <li class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-xl transition duration-300">
                                <a 
                                    href={post.url} 
                                    class="block hover:bg-gray-50 h-full"
                                >
                                    {post.frontmatter.image && (
                                        <div class="h-48 w-full overflow-hidden">
                                            <img 
                                                src={post.frontmatter.image.url} 
                                                alt={post.frontmatter.image.alt} 
                                                class="w-full h-full object-cover"
                                            />
                                        </div>
                                    )}
                                    <div class="p-6">
                                        <h4 class="text-xl font-bold text-gray-900 mb-2">
                                            {post.frontmatter.title}
                                        </h4>
                                        <p class="text-gray-600 mb-4">
                                            {post.frontmatter.description}
                                        </p>
                                        <div class="flex justify-between items-center text-sm text-gray-500">
                                            <span>{post.frontmatter.author}</span>
                                            <span>{new Date(post.frontmatter.date).toLocaleDateString()}</span>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        ))}
                    </ul>
                </section>
            </main>

            <footer class="border-t border-gray-200 py-8 mt-8 text-center text-gray-600">
                Â© 2024 Martin Note. All rights reserved.
            </footer>
        </div>
    </body>
</html>