---
import Filter from "../components/Filter";
import Navigation from "../components/Navigation.astro";


export const allPosts = await Astro.glob('../pages/posts/*.md');
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
);
---
<html lang="en" class="h-full">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Code Decoded</title>
    </head>

    <body class="min-h-full bg-gray-50 text-gray-900 antialiased">  
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <Navigation/>   
        
            <main>
                <section class="bg-white shadow-md rounded-lg p-6 mb-8">
                    <h1 class="text-3xl font-bold text-gray-900 mb-4">Welcome to Code Decoded!</h1>
                    <p class="text-gray-600 mb-6">
                        A website all about <span class="text-gray-900 underline italic">making programming simple</span>. 
                        Let's <span class="text-blue-500 font-bold">decode the code</span>, one step at a time. ðŸ§©
                    </p>
                </section>
                
                <section class="mb-8">
                    <div class="flex flex-row justify-between items-center mb-6">
                        <h3 class="text-2xl font-semibold text-gray-800 mb-4 md:mb-0">Recent Posts</h3>
                        <div class="flex space-x-2">
                            <!-- <input 
                                type="text" 
                                placeholder="Search Blog" 
                                class="border-2 border-gray-200 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                            > -->
                        
                            <button class="border-2 rounded-lg p-2 text-gray-600 hover:bg-gray-100 transition-colors">
                                <img src="../../public/icons/search.svg" />
                            </button>
                        
                            <button id="filterToggle" class="border-2 rounded-lg p-2 text-gray-600 hover:bg-gray-100 transition-colors">
                                <img src="../../public/icons/filter.svg" />
                            </button>
                        </div>
                    </div>
                    
                    <div id="filterContainer" class="hidden transition-all duration-300 ease-in-out mb-4">
                     <Filter client:load/>
                    </div>

                    <ul class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        {sortedPosts.map((post) => (
                            <li class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-xl transition duration-300">
                                <a 
                                    href={post.url} 
                                    class="block hover:bg-gray-50 h-full"
                                >
                                    {post.frontmatter.image && (
                                        <div class="h-48 w-full overflow-hidden">
                                            <img 
                                                src={post.frontmatter.image.url} 
                                                alt={post.frontmatter.image.alt} 
                                                class="w-full h-full object-cover"
                                            />
                                        </div>
                                    )}
                                    <div class="p-6">
                                        <h4 class="text-xl font-bold text-gray-900 mb-2">
                                            {post.frontmatter.title}
                                        </h4>
                                        <p class="text-gray-600 mb-4">
                                            {post.frontmatter.description}
                                        </p>
                                        <div class="flex justify-between items-center text-sm text-gray-500">
                                            <span>{post.frontmatter.author}</span>
                                            <span>{new Date(post.frontmatter.date).toLocaleDateString()}</span>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        ))}
                    </ul>
                </section>
            </main>

            <footer class="border-t border-gray-200 py-8 mt-8 text-center text-gray-600">
                Â© 2024 Martin Note. All rights reserved.
            </footer>
        </div>

        <script>
            const filterToggle = document.getElementById('filterToggle');
            const filterContainer = document.getElementById('filterContainer');

            filterToggle!.addEventListener('click', () => {
                filterContainer!.classList.toggle('hidden');
            });
        </script>
    </body>
</html>